<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local settings:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Scan:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/autoscantoggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Interval(Mins):"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/scaninterset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        android:text="5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Network Settings:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/serveraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servers:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <ListView
        android:id="@+id/serverslistsettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay" >

    </ListView>

        <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Server Settings:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
        android:id="@+id/serversettings"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:ems="10"
            android:text="Enter Server Address Here : And Port Here" />

        <EditText
        android:id="@+id/setuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="32"
        android:text="Enter You User Name Here" />

        <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pin:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
        android:id="@+id/setpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="4"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Enter New Pin:"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"
            android:visibility="gone" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="left|center_vertical"
            android:maxLength="4"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Pin"
            android:id="@+id/button"
            android:visibility="gone"
            android:onClick="Set_New_Pin" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/addsvr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Add_Server"
            android:text="Add Server" />

        <Button
            android:id="@+id/applydata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="applydatatostruct"
            android:text="Apply" />

        <Button
            android:id="@+id/delsvr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Remove_Server"
            android:text="Delete Server" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

        </ScrollView>

    </LinearLayout>
</ScrollView>
