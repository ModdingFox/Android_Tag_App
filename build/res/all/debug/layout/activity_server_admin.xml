<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Server:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
    android:id="@+id/serverslistadmin"
    android:layout_width="fill_parent"
    android:layout_height="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add User:"
            android:id="@+id/textView"
            android:visibility="gone" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="User"
            android:visibility="gone"
            android:maxLength="32" />

        <Button
    android:id="@+id/button1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add"
    android:visibility="gone"
        android:onClick="add_user" />

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players:"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="gone" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="left|center_vertical"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Mac:"
            android:id="@+id/textView9"
            android:visibility="gone" />

        <Button
    android:id="@+id/button2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Remove"
    android:visibility="gone"
        android:onClick="remove_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Manage Pin:"
            android:id="@+id/textView8"
            android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:visibility="gone" />

        <Button
    android:id="@+id/button3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Reset Pin"
    android:visibility="gone"
        android:onClick="change_pin" />

    <TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Is Active:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:visibility="gone" />

    <ToggleButton
    android:id="@+id/toggleButton5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToggleButton"
    android:visibility="gone"
        android:onClick="toggle_active" />

    <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="It Status:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:visibility="gone" />

    <ToggleButton
    android:id="@+id/toggleButton1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToggleButton"
    android:visibility="gone"
        android:onClick="toggle_it" />

    <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Can Add Players:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:visibility="gone" />

    <ToggleButton
    android:id="@+id/toggleButton2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToggleButton"
    android:visibility="gone"
        android:onClick="toggle_add_players" />

    <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Can Remove Players:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:visibility="gone" />

    <ToggleButton
    android:id="@+id/toggleButton3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToggleButton"
    android:visibility="gone"
        android:onClick="toggle_remove_players" />

    <TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Is Admin:"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:visibility="gone" />

    <ToggleButton
    android:id="@+id/toggleButton4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToggleButton"
    android:visibility="gone"
        android:onClick="toggle_admin" />

    </LinearLayout>
</ScrollView>
